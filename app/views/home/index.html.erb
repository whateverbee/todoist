<div class="card">
  <div class="card-body">
    <h1 class="card-title">Todoist - a to do list app</h1>
    <div class="card-text">
      text here
    </div>
  </div>
</div>
<!-- next we do rails logic to show lists if you're logged in and lists exist. -->
<div class="container">
<% unless @list.count == 0 %>
 <% @list.each do |list| %>
  <%= render 'shared/list_card' %>
<% else %>
  <div class="card">
    <div class="card text">
      No lists to show. <a href="#">Create a new list</a>
    </div>
  </div>
<% end %>